<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Lead</th>
      <th>Excerpt</th>
      <th>Description</th>
      <th>Price</th>
      <th>Cover type</th>
      <th>Num pages</th>
      <th>Isbn</th>
      <th>Year</th>
      <th>Buy link</th>
      <th>Size</th>
      <th>Cover image</th>
      <th>Slug</th>
      <th>Author</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.lead %></td>
        <td><%= book.excerpt %></td>
        <td><%= book.description %></td>
        <td><%= book.price %></td>
        <td><%= book.cover_type %></td>
        <td><%= book.num_pages %></td>
        <td><%= book.isbn %></td>
        <td><%= book.year %></td>
        <td><%= book.buy_link %></td>
        <td><%= book.size %></td>
        <td><%= book.cover_image %></td>
        <td><%= book.slug %></td>
        <td><%= book.author %></td>
        <td><%= book.category %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_admin_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

